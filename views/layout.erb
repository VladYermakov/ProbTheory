<!DOCTYPE html>
<html>
	<head>
		<title><%= @local[:title] %></title>
		<link rel="stylesheet" href="/assets/style.css">
		<link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
		<% unless @vec.nil? %> 
			<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
			<script type="text/javascript">
	      		google.charts.load('current', {'packages':['corechart']});
	      		google.charts.setOnLoadCallback(drawChart);
	      		function drawChart() {
	        		var data_xi = google.visualization.arrayToDataTable(<%= process_xi_for_graph %>);
	        		var data_eta = google.visualization.arrayToDataTable(<%= process_eta_for_graph %>);

	        		var options_xi = {
	          			title: 'Fξ graph',
	          			vAxis: {
	          				ticks: [-0.5, 0, 0.5, 1, 1.5],
	          				gridlines: {
	          					count: 10
	          				}
	          			},
	          			hAxis: {
	          				ticks: <%= get_xi_ticks %>,
	          				gridlines: {
	          					count: 10
	          				}
	          			},
	          			connectSteps: false,
	          			isStacked: 'absolute',
	          			explorer: {}
	          			
			        };

			        var options_eta = {
	          			title: 'Fη graph',
	          			vAxis: {
	          				ticks: [-0.5, 0, 0.5, 1, 1.5],
	          				gridlines: {
	          					count: 10
	          				}
	          			},
	          			colors: ['red'],
	          			hAxis: {
	          				ticks: <%= get_eta_ticks %>,
	          				gridlines: {
	          					count: 10
	          				}
	          			},
	          			connectSteps: false,
	          			isStacked: 'absolute',
	          			explorer: {}
			        };

	        		var chart_xi = new google.visualization.LineChart(document.getElementById('graph-xi'));
	        		var chart_eta = new google.visualization.LineChart(document.getElementById('graph-eta'));

			        chart_xi.draw(data_xi, options_xi);
			        chart_eta.draw(data_eta, options_eta);
	      		}
			</script>
		<% end %>
	</head>
	<body>
		<!--header>
		</header-->
		<div class="clearfix">
			<!--div class="main" id="sidebar">
			</div-->
			<div class="main">
				<%= yield %>
			</div>
		</div>
		<!--audio controls="controls" autoplay loop>
			<source src="/music/testsong.mp3">
		</audio-->
		<footer>
			<p>Copyright &copy; 2016 Vlad Yermakov</p> <p class="locale">
				<% if @lang != :uk %> 
					<a href = "/uk">uk</a>
				<% else %>
					<b>uk</b>
				<% end %>
				|
				<% if @lang != :ru %> 
					<a href = "/ru">ru</a>
				<% else %>
					<b>ru</b>
				<% end %>
				|
				<% if @lang != :en %> 
					<a href = "/en">en</a>
				<% else %>
					<b>en</b>
				<% end %>
			</p>
		</footer>
	</body>
</html>